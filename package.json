{
  "name": "universal-electron-application",
  "version": "1.0.0",
  "description": "A universal application that uses electron as a front end for super optimized workflow and multi-worker execution",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "npm run build:main && npm run build:renderer && npm run build:preload",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "watch": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"npm run watch:preload\"",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:renderer": "tsc -p tsconfig.renderer.json --watch",
    "watch:preload": "tsc -p tsconfig.preload.json --watch",
    "start": "npm run build && electron .",
    "package": "npm run build && electron-builder"
  },
  "keywords": [
    "electron",
    "universal",
    "multi-worker",
    "plugin-system",
    "performance"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {},
  "build": {
    "appId": "com.universal.electron",
    "productName": "Universal Electron App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
