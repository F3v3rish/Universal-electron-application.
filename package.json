{
  "name": "universal-electron-application",
  "version": "1.0.0",
  "description": "A universal application that uses electron as a front end for super optimized workflow and multi-worker execution",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "npm run build:main && npm run build:renderer && npm run build:preload",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "node scripts/build-renderer.js",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:verify": "node scripts/verify-build.js",
    "watch": "concurrently \"npm run watch:main\" \"npm run watch:preload\"",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:preload": "tsc -p tsconfig.preload.json --watch",
    "start": "npm run build && electron .",
    "package": "npm run build && electron-builder",
    "test": "npm run build && node --test test/*.test.js",
    "test:watch": "node --test --watch test/*.test.js",
    "test:quick": "node --test test/utils.test.js test/windows.test.js",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "lint:fix": "eslint src/**/*.ts src/**/*.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\""
  },
  "keywords": [
    "electron",
    "universal",
    "multi-worker",
    "plugin-system",
    "performance"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.7.4",
    "typescript": "^5.3.2"
  },
  "build": {
    "appId": "com.universal.electron",
    "productName": "Universal Electron App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
